<div class="container text-center" id="main-div">
    <h1 class="display-4">View Item</h1>
    
    <div class="row">
        <p class="col-sm-4 text-left"><a class="btn btn-primary" href="<%= items_path %>">Back</a></p>
        <p class="col-sm-4 text-center"><a class="btn btn-primary" href="/items/<%= @item.id %>/edit">Edit Item</a></p>
        <p class="col-sm-4 text-right"><a class="btn btn-primary" href="/items/<%= @item.id %>" data-method="delete">Delete Item</a></p>
        
    </div>

    <h1 class="display-4"><%= @item.label %></h1>
    <div class="row">
        <div class="col-sm-12">
            <strong>Item Type:</strong>
            <p><%= @item.item_type.label %></p>
            <strong>Description:</strong>
            <p><em><%= @item.description %></em></p>
            <strong>Price:</strong>
            <p>$<%= @item.price %></p>
        </div>
    </div>
</div>